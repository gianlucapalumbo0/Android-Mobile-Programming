<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button

                android:id="@+id/elem_lista_titolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onTitoloClick"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="I Promessi Sposi"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/elem_lista_autore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onAutoreClick"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/black"
                android:text="I Promessi Sposi"
                android:textSize="15dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/elem_lista_copertina"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="onPictureClick"
                />

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
