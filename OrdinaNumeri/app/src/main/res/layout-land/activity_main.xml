<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:background="@drawable/custom_pulsanti"
        android:id="@+id/counterClick"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:layout_above="@id/lineasuperiore"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="primasu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="secondasu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="terzasu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineasuperiore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/partecentrale"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_pulsanti"
            android:onClick="primasin"
            android:text="←"
            android:textSize="20dp" />

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:id="@+id/position11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp" />

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:id="@+id/position12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp" />

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:id="@+id/position13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="primades"
            android:text="→"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/partecentrale"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="secondasin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20dp"/>

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position21"
            android:layout_weight="1"/>

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position22"
            android:layout_weight="1"/>

        <TextView
            android:background="@drawable/custom_rettangolo"

            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position23"
            android:layout_weight="1"/>


        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="secondades"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="→"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineainferiore"
        android:layout_below="@id/partecentrale"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="terzasin"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20dp"/>

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position31"
            android:layout_weight="1"/>

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position32"
            android:layout_weight="1"/>

        <TextView
            android:background="@drawable/custom_rettangolo"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position33"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="terzades"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="→"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/lineainferiore"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="primagiu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↓"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="secondagiu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↓"
            android:textSize="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_pulsanti"
            android:onClick="terzagiu"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↓"
            android:textSize="20dp"/>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/custom_pulsanti"
        android:onClick="reset"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/lineainferiore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"/>


</RelativeLayout>